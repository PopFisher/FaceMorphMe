<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/back_rect_round"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/detect_face"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_choose_images" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.hzy.face.morphme.widget.Ratio34ImageView
                android:id="@+id/demo_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_rectangle"
                android:padding="1px"
                android:src="@drawable/ic_head" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/back_rect_round"
                android:orientation="vertical"
                android:padding="6dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_detect_face"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detect_face"
                    android:theme="@style/AppTheme.Button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_seeta_detect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seeta_detect"
                    android:theme="@style/AppTheme.Button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_seeta_landmarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seeta_points"
                    android:theme="@style/AppTheme.Button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
